@model ColegioPublic.ViewsModel.NotaVM.IndexNotaViewModel
@{
    ViewBag.Title = "Lista Cursos";
}

<h2>Lista de Cursos</h2>

@using (Ajax.BeginForm("_ListCurso", "Nota", new AjaxOptions
{//GetPatients is name of method in PatientController
    InsertionMode = InsertionMode.Replace, //target element(#patientList) will be replaced
    UpdateTargetId = "paged-section",
    LoadingElementId = "loader" // div with .gif loader - that is shown when data are loading
}))
{
    @*@Html.LabelFor(x => x.q, new { })*@
    @*<div class="input-group">

        @Html.TextBoxFor(x => x.q, new { @class = "form-control" })
        <button class="btn btn-success btn-sm"><i class="fa fa-search" aria-hidden="true"></i></button>
    </div>*@

    <div class="form-group row">
        <div class="col-6">
            <div class="form-group row">
                @Html.LabelFor(x => x.GradoId, new { @class = "col-sm-2 col-form-label" })

                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.GradoId, new SelectList(Model.LstGrados, "Value", "Text"), new { @class = "form-control custom-select" })

                </div>
                @Html.ValidationMessageFor(x => x.GradoId)
            </div>
        </div>
            <div class="col-6">
         
                <div class="form-group row">
                    @Html.LabelFor(x => x.SeccionId, new { @class = "col-sm-2 col-form-label" })

                    <div class="col-sm-10">
                        @Html.DropDownListFor(x => x.SeccionId, new SelectList(Model.LstSeccion, "Value", "Text"), new { @class = "form-control custom-select" })

                    </div>
                    @Html.ValidationMessageFor(x => x.SeccionId)
                </div>
            </div>

        </div>
    <div class="form-group text-right">
        <button class="btn btn-success ">Filtrar</button>
