@model ColegioPublic.ViewsModel.MatriculaVM.IndexMatriculaViewModel
@{
    ViewBag.Title = "Lista Matriculas";
}

<h2>Lista de Matriculas</h2>

@using (Ajax.BeginForm("_ListMatricula", "Matricula", new AjaxOptions
{//GetPatients is name of method in PatientController
    InsertionMode = InsertionMode.Replace, //target element(#patientList) will be replaced
    UpdateTargetId = "paged-section",
    LoadingElementId = "loader" // div with .gif loader - that is shown when data are loading
}))
{
    @Html.LabelFor(x => x.q, new { })
    <div class="input-group">

        @Html.TextBoxFor(x => x.q, new { @class = "form-control" })
        <button class="btn btn-success btn-sm"><i class="fa fa-search" aria-hidden="true"></i></button>
    </div>

}
<hr />
<div class="button-group text-right">
    <a href="@Url.Action("AddEditMatricula","Matricula")" class="btn btn-success"> <i class="fa fa-plus-circle" aria-hidden="true"></i> Nueva Matricula</a>
</div>

<div class="table-responsive" id="paged-section">
    @{Html.RenderAction("_ListMatricula", Model);}
</div>



@{
    ViewBag.Title = "Index";
}



