@model ColegioPublic.ViewsModel.NotificacionVM.AddEditNotificacionViewModel
@{
    ViewBag.Title = "Agregar Notificacion";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Agregar Notificaci</h4>
                <form class="form" action="@Url.Action("AddNotification","Notificacion")" method="post">
                    @Html.HiddenFor(x => x.NotificacionId)
                    @Html.HiddenFor(x => x.UsuarioSendId)

                    <div class="form-group row">
                        @Html.LabelFor(x => x.TipoNotificacionId, new { @class = "col-sm-2 col-form-label" })

                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.TipoNotificacionId, new SelectList(Model.LstTipoNotificacion, "Value", "Text"), new { @class = "custom-select" })

                        </div>
                        @Html.ValidationMessageFor(x => x.TipoNotificacionId)
                    </div>

                    <div class="form-group mt-5 row">
                        @Html.LabelFor(x => x.Comentario, new { @class = "col-2 col-form-label" })

                        <div class="col-10">
                            @Html.TextAreaFor(x => x.Comentario, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="card-body">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                            <button type="button" class="btn btn-dark">Cancel</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(function () {

        });
    </script>
}