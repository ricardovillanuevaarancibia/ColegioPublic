@model ColegioPublic.ViewsModel.AulaVM.AddEditAulaViewModel
@{
    ViewBag.Title =Model.AulaId.HasValue ? "Agregar " : "Editar "+ " Aula";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@(Model.AulaId.HasValue ? "Agregar " : "Editar ")Aula</h4>
                <form class="form" action="@Url.Action("AddEditAula","Aula")" method="post">
                    @Html.HiddenFor(x => x.AulaId)
                    <div class="form-group mt-5 row">
                        @Html.LabelFor(x => x.CodigoAula, new { @class = "col-2 col-form-label" })

                        <div class="col-10">
                            @Html.TextBoxFor(x => x.CodigoAula, new { @class = "form-control" })
                        </div>
                    </div>
                   
                    <div class="form-group mt-5 row">
                        @Html.LabelFor(x => x.CapacidadMax, new { @class = "col-2 col-form-label" })

                        <div class="col-10">
                            @Html.TextBoxFor(x => x.CapacidadMax, new { @class = "form-control"  })
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="card-body">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                            <button type="button" class="btn btn-dark">Cancel</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(function () {

        });
    </script>
}