@model  Entel.SIOYM.Web.Areas.Ticket.Models.FileModel

@{
    var id = Guid.NewGuid().ToString();
    var Area = ViewData["area"] ?? string.Empty;
}

<div id="@id" class="p-20">
    @using (Html.BeginCollectionItem("LstArchivosAdjuntos"))
    {
        <div class="col-md-11">
            <div class="form-group row">
                @Html.LabelRequiredFor(x => x.File, new { @class = "col-3 col-form-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.File, new { @type = "file", @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelRequiredFor(x => x.Comentario, new { @class = "col-3 col-form-label" })
                <div class="col-md-9">
                    @Html.TextAreaFor(m => m.Comentario, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="col-md-1">
            <button type="button" onclick="deleterow('#@id')" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i> Quitar</button>
        </div>
        <hr />
    }
</div>
