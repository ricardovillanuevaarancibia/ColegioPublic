@model ColegioPublic.ViewsModel.UserVM.UserViewModel
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<link rel="icon" type="image/png" sizes="16x16" href="~/Content/assets/images/favicon.png">
<title>Colegio Público</title>
<!-- Bootstrap Core CSS -->

<link href="~/Content/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<!-- Custom CSS -->
<link href="~/Content/main/css/style.css" rel="stylesheet">
<!-- You can change the theme colors from here -->
<link href="~/Content/main/css/colors/blue.css" id="theme" rel="stylesheet">
<body>
    <!-- Favicon icon -->
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <section id="wrapper">
        <div class="login-register" style="background-image:url(../../Content/assets/images/colegio.jpeg);">
            <div class="login-box card">
                <div class="card-body">
                    <form class="form-horizontal form-material" id="loginform" method="post" action="@Url.Action("Log","Login")">
                        <h3 class="box-title mb-3">Iniciar Sesión</h3>
                        @Html.Partial("_Notifications")
                        <div class="form-group ">
                            <div class="col-xs-12">
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", required = "", placeholder = "Usuario", type = "text" })

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", required = "", placeholder = "Contraseña", type = "password" })
                            </div>
                        </div>
                        <div class="form-group">

                        </div>
                        <div class="form-group text-center mt-3">
                            <div class="col-xs-12">
                                <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Ingresar</button>
                            </div>
                        </div>

                    </form>
                    <form class="form-horizontal" id="recoverform" action="https://www.wrappixel.com/demos/admin-templates/monster-admin/main/index.html">
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <h3>Recover Password</h3>
                                <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <input class="form-control" type="text" required="" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group text-center mt-3">
                            <div class="col-xs-12">
                                <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="~/Content/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Content/assets/plugins/bootstrap/js/popper.min.js"></script>
    <script src="~/Content/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/Content/main/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/Content/main/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/Content/main/js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="~/Content/assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <!--Custom JavaScript -->
    <script src="~/Content/main/js/custom.min.js"></script>
    <!-- ============================================================== -->
    <!-- Style switcher -->
    <!-- ============================================================== -->
    <script src="~/Content/assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>
</body>


